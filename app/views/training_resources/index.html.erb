<div class="container">
 <h1>Training Resources</h1>
    <div class="row">

    
    <div class="col-md-8">

    <div class="row">
    
   
     <% @training_resources.each do |training_resource| %>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-body">
                                    <h3><%= link_to training_resource.Title, training_resource_path(training_resource.id) %></h3>
            <%= link_to "View", training_resource_path(training_resource.id), class:"btn btn-primary"%>
                </div>
            </div>
            
        </div>
                <% end %>

                 </div>
    </div>

    

    <div class="col-md-4">


    <div class="card mt-3">
        <div class="card-header">
            <strong>Tags</strong>
        </div>

        <div class="card-body">

        <ul class="list-group">

         <% @tags.each do |tag| %>

        
  <li class="list-group-item d-flex justify-content-between align-items-center">
               <%= link_to tag.tag, training_resources_path(:tag => tag.id) %>

    <span class="badge badge-primary badge-pill"><%= tag.training_resources.count %></span>
  </li>
       <% end %>

        </ul>
        </div><br/>
            <%= link_to "Create New tag", new_tag_path, class: "btn btn-primary" %>
    
    </div>
     
    </div>
     
       
 </div>

 
    </div> <br/>


</div>

